<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="780.0" prefWidth="800.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionHotel.controller.ClienteController">
    <children>
        <SplitPane dividerPositions="0.15" prefHeight="780.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <!-- Barra lateral izquierda -->
                <AnchorPane prefWidth="250.0">
                    <children>
                        <TableView fx:id="tablaClientes" prefHeight="780.0" prefWidth="250.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="nombreColumna" prefWidth="100.0" text="Nombre" />
                                <TableColumn fx:id="apellidosColumna" prefWidth="100.0" text="Apellidos" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>

                <!-- Panel derecho principal -->
                <AnchorPane prefHeight="780.0" prefWidth="550.0" styleClass="background">
                    <children>
                        <!-- Título de Datos Personales -->
                        <Label styleClass="label-header" text="Datos Personales" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />

                        <!-- Contenedor de Datos Personales en estilo tarjeta -->
                        <VBox layoutX="10.0" layoutY="50.0" prefHeight="230.0" prefWidth="600.0" spacing="10" style="-fx-background-color: #ff8100; -fx-background-radius: 10; -fx-padding: 20;" AnchorPane.topAnchor="70.0">
                            <children>
                                <GridPane hgap="10" vgap="10">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="DNI" />
                                        <Label fx:id="dniLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" />

                                        <Label text="Nombre" GridPane.rowIndex="1" />
                                        <Label fx:id="nombreLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                        <Label text="Apellidos" GridPane.rowIndex="2" />
                                        <Label fx:id="apellidosLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                        <Label text="Direccion" GridPane.rowIndex="3" />
                                        <Label fx:id="direccionLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                        <Label text="Localidad" GridPane.rowIndex="4" />
                                        <Label fx:id="localidadLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                        <Label text="Provincia" GridPane.rowIndex="5" />
                                        <Label fx:id="provinciaLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                    </children>
                           <rowConstraints>
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>
                            </children>
                        </VBox>

                        <!-- Botones de Acción -->
                        <HBox layoutX="330.0" layoutY="340.0" spacing="10" AnchorPane.rightAnchor="20.0">
                            <children>
                                <Button onAction="#handleNewCliente" text="New..." />
                                <Button onAction="#handleEditCliente" text="Edit..." />
                                <Button onAction="#handleDeleteCliente" text="Delete" />
                            </children>
                        </HBox>

                        <!-- Título de Reservas -->
                        <Label layoutX="11.0" layoutY="396.0" styleClass="label-header" text="Reservas" AnchorPane.leftAnchor="10.0" />

                        <!-- Lista scrolleable de Reservas -->
                        <ListView fx:id="listaReservas" prefHeight="300.0" prefWidth="600.0" styleClass="reservas-list" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="450.0" />
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
